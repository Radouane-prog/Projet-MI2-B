int egal(char *a, char *b) {
    int i = 0;
    while (a[i] != '\0' && b[i] != '\0') {
        if (a[i] != b[i]){
            return 0;
        } 
        i++;
    }
    if (a[i] != b[i]){
        return 0;
    }
    return 1;  // Fermeture correcte de la fonction
}

void day_Food(Animal a, int jour) {
    int consommation = 0;

    // V√©rification de l'esp√®ce Chat ou Chien
    if (egal(a.espece, "Chat") || egal(a.espece, "Chien")) {
        if (a.age < 2) {
            consommation = 500;
        } else {
            consommation = 0.1 * a.poids * 1000; 
        }

        // Affichage sp√©cifique selon l'esp√®ce
        if (egal(a.espece, "Chat")) {
            printf("üê± La consommation journali√®re de ce Chat est de %d g\n", consommation);
        } else {
            printf("ü¶¥ La consommation journali√®re de ce Chien est de %d g\n", consommation);
        }
    } 
    // V√©rification pour le Hamster
    else if (egal(a.espece, "Hamster")) {
        consommation = jour * 20;
        printf("üêπ La consommation journali√®re de ce Hamster est de %d g üßÄ\n", consommation);
    } 
    // V√©rification pour l'Autruche
    else if (egal(a.espece, "Autruche")) {
        float consommation_autruche = 2.5 * jour;
        printf("ü™ø La consommation journali√®re de cette Autruche est de %.1f kg üåø\n", consommation_autruche);
    }
}

void day_Clean(Animal a, int jour) {
    int semaine = jour / 7;
    int nettoyage = 2 * jour;

    // V√©rification de l'esp√®ce Chat ou Hamster
    if (egal(a.espece, "Chat") || egal(a.espece, "Hamster")) {
        nettoyage += 10 * jour + 20 * semaine;
        printf("üßº‚è≥ Le temps de nettoyage de %s pour %d jour(s) est de %d min\n", a.nom, jour, nettoyage);
    } 
    // V√©rification pour l'Autruche
    else if (egal(a.espece, "Autruche")) {
        nettoyage += 20 * jour + 45 * semaine;
        printf("üßº‚è≥ Le temps de nettoyage de %s pour %d jour(s) est de %d min\n", a.nom, jour, nettoyage);
    } 
    // V√©rification pour le Chien
    else if (egal(a.espece, "Chien")) {
        nettoyage += 5 * jour + 20 * semaine;
        printf("üßº‚è≥ Le temps de nettoyage de %s pour %d jour(s) est de %d min\n", a.nom, jour, nettoyage);
    }
}
